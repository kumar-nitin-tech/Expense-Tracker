    <style name="Widget.Theme.ExpenseTracker.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.ExpenseTracker.ButtonBar.Fullscreen" parent="">
